// Color palette
$red =		#e31e25
$orange =	#fe9720
$yellow = 	#faf9be
$green =	#a7d92e
$blue =		#66d9ee
$purple =	#ae81ff
$gray =		#abc
$off-gray =	#777
$gray-border = #4b493e
$bg =       #272825
$bg-l =     #8F908A
$bg-d =     #16161a
$white =	#f6f6f6
$black =    #000
$alert =    #f54

// Fonts
$ff-default = 'Open Sans', Arial, sans-serif
$ff-heading = 'Open Sans Condensed', Arial, sans-serif

//
$border = 1px solid $gray-border
$bp = 600px

$shadow-box = 2px 2px 10px rgba(0,0,0,.65)
$shadow-soft = 1px 1px 5px rgba(0,0,0,.35)

label-styling()
	color $off-gray
	font-family $ff-heading
	font-weight 700

list-hint()
	&:after
		font-icon('f')
		position absolute
		top 179px
		left calc(100% - 2px)
		transform translateY(-50%)
		color $off-gray
		font-size 12px
		line-height 1
		text-shadow 2px 2px 2px rgba(0,0,0,.15)
