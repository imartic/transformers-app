vendors = official

@import 'vars'
@import 'utils'
@import 'reset'
@import 'form'

@font-face
	font-family: 'icon-font';
	src: url('../fonts/icon_font.woff') format('woff');

above(bp)
	@media screen and (min-width: bp)
		{block}

below(bp)
	@media screen and (max-width: bp)
		{block}

.btn
	padding 3px 0
	_t color, border-color, background-color
	background-color $bg
	color $off-gray
	font-family $ff-heading
	font-weight 700
	font-size 14px
	text-transform uppercase
	line-height 1
	white-space nowrap
	transition all .2s ease
	&.icon-btn
		padding 4px
		border-radius 50%
		color $red
		font-family icon-font
		font-size 14px
		text-align center
		text-transform none
		line-height 1
	&:hover
		background-color lighten($bg, 5%)
	&:active
		color $white

button.item-icon
	position absolute
	top 50%
	right 6px
	transform translateY(-50%)
	_t color
	padding 3px
	background-color transparent
	color $off-gray
	font-family icon-font
	font-size 10px
	line-height 1
	&:hover
		color $orange
	&:active
		color $white
	&.dropdown-button
		position relative	
		transform rotate(90deg) translateX(1px)
.ctrl-group
	font-size 0
	text-align right
	white-space nowrap
	.btn
		&:first-of-type:not(.icon-btn)
			color $orange
			&:active
				color $white
		+ .btn
			margin-left 12px

.dropdown
	position relative
	display inline-block
	.dropdown-content
		position absolute
		display none
		right 6px
		background-color $bg-d
		border-radius 5px
		border $border
		box-shadow $shadow-soft
		min-width 90px
		z-index 1
		li
			text-align center
			cursor pointer
			color $gray
			padding 6px 2px		
		li:hover
			background-color lighten($bg, 5%)
.dropdown:hover .dropdown-content
	display block

// Init
global-reset()

:root
	font-family $ff-default
	font-size 14px

::selection
	background-color $orange
	color $white

h1,h2,h3,h4,h5,h6
	label-styling()
h2
	line-height 1
h3
	margin-bottom 3px

body
	background-color $bg
	color $gray

main
	display grid
	grid-template-columns 1fr minmax(300px, 1000px) 1fr
	grid-gap 16px
	padding 0 10px

figure.logo
	display flex
	align-items center
	img
		height 60px
	.wordmark
		position relative
		top 2px
		margin-left 12px
		color $off-gray
		font-family 'Press Start 2P', $ff-heading
		font-size 20px
		text-transform uppercase

.main-header
	grid-column 2/3
	position relative
	margin-top 16px
	margin-bottom 24px
.main-content
	display grid
	grid-gap 16px
	grid-column 2/2
	> header
		display flex
.main-footer
	grid-column 2/3
	height 40px
	margin-top -50px
	margin-right 10px
	text-align right
	color $off-gray
	font-size 10pt
	a
		transition color .2s ease
	a:hover
		color lighten($off-gray, 30%)

.card
	background-color $bg
	border-radius 10px
	border $border
	box-shadow $shadow-box
	margin-bottom 50px
	> header
		display flex
		align-items flex-end
		padding 12px
		background-color $bg
		border-radius 10px 10px 0 0
		border-bottom $border
		h2, h3
			flex 1
	> .content
		border-radius 0 0 10px 10px
		background-color $bg-d
		.transformer-config
			padding 16px
			display grid
			+above($bp)
				grid-gap 16px
				grid-template-columns repeat(2, 1fr)
			> section
				display grid			
				grid-gap 16px
				&.config-right
					grid-template-rows: 1fr;
	> footer
		padding 3px
		.ctrl-group
			.btn
				font-size 16px
		&:not(:empty)
			padding 8px 12px
		.notification-message
			float left
			color $red
	form.table-filter
		padding 16px
		display grid
		grid-template-columns: repeat(2, 1fr);
		grid-gap: 16px;
	div.item-list
		display grid
		overflow-x scroll
		&.data-table
			grid-template-columns var(--column-template, 4fr 4fr 4fr)
			overflow-x visible			
		.list-message
			padding 12px 10px
			text-align center
			grid-column 1 / -1
			color $off-gray
		.row
			display contents
			cursor pointer
			&:hover:not(.headings)
				.cell
					background-color lighten($bg,5%)
			&.headings
				border-bottom 2px solid $gray
				font-weight 400
				cursor initial
				.cell
					align-self end
					padding-bottom 3px
					font-family $ff-heading
					font-size 14px
					color $off-gray
					text-transform uppercase
				.ta-r
					button
						text-align right
				.ta-l
					button
						text-align left
		.cell
			display flex
			align-items center
			padding 12px 16px
			border-bottom 1px solid lighten($bg,5%)
			font-weight inherit
			.read-only
				pointer-events none
			> form
				width 100%
		.ta-r
			justify-content flex-end
			text-align right
		.ta-l
			justify-content flex-start
			text-align left
		.ta-c
			justify-content center
			text-align center
		.actions
			justify-content center
			text-align center

	article
		> .content
			border $border
			border-radius 5px
		> header
			position relative
			.ctrl-group
				position absolute
				right 0
				bottom 0
				margin-top 0

	article.item-list
		position relative
		> .content
			background-color $bg-d
			overflow auto
			box-shadow $shadow-soft
			grid-template-rows min-content
			height 218px	
		.list-title
			margin-bottom 3px
			color $off-gray
		.list-input	
			margin-bottom 8px
			.icon-btn
				top 50%
		ul
			li
				position relative
				padding 6px 48px 6px 12px
				_t background-color, color
				color $gray
				cursor pointer
				-webkit-user-select none
				user-select none
				&:hover
					background-color $bg
				&:active
					color $white
				&.active
					background-color $bg
					color $green
					cursor initial
					overflow-x visible
		button.add-new
			display block
			position sticky
			top 0
			left 0
			z-index 1
			padding 6px 0
			width 100%
			border-radius 5px 5px 0 0
			border 6px solid $bg-d
			background-color $bg
			color $orange
			font-family $ff-heading
			font-weight 600
			font-size 14px
			text-transform uppercase
			_t background-color, color
			&:hover
				background-color lighten($bg,5%)
			&:active
				color $white
